{
  "name": "@nodo-ai/x402",
  "version": "1.0.0",
  "description": "TypeScript SDK for NODO x402 API - AI prediction market analysis with Solana payments",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nodo",
    "x402",
    "solana",
    "prediction-markets",
    "polymarket",
    "ai",
    "micropayments",
    "usdc"
  ],
  "author": "NODO Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodo-ai/nodo-x402"
  },
  "homepage": "https://nodo.ai",
  "bugs": {
    "url": "https://github.com/nodo-ai/nodo-x402/issues"
  },
  "dependencies": {
    "@solana/web3.js": "^1.91.0",
    "@solana/spl-token": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}


